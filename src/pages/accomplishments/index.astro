---
//PAGE TO RENDER ALL AVAILABLE POSTS
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
const posts = (await getCollection("accomplishmentsinfo")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
import VerticalCard from "../../components/VerticalCard.astro";
import Maintain from "../../components/Maintain.astro"; // Use when site under maintainance
import database from "../../../megabyte-cms/config/database";
---
<!-- <Maintain /> -->
<!-- 
  structure of the post
  title: "this is the title"
description: "this is a description of the post"
pubDate: "this is pubdate"
updatedDate: ""
heroImage: "/public/assets/tsrs.svg"
          <!-- `/accomplishments/${post.slug}/`} -->
<Layout title="Accomplishments"  >
  <main>
    <div class="bg-[#ff7474] w-fit p-10 h-fit mx-auto  mt-[200px] mb-[100px] title">
<h1 class="text-4xl font-bold text-center">Accomplishments</h1>
<h1 class="text-xl pt-5 text-center">What the society and its members have been up to, in and outside school.</h1>

</div>
    
    <div class="mb-5 grid w-full grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 ">
    {
      posts.map((post) => (
        <div>

         <VerticalCard
              title={post.data.title}
              link="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
              body={post.data.description}
              imgLink={post.data.heroImage}
             tColour={post.data.titleColour}
         />
        </div>
      ))
    }</div>
  </main>
  <style>
    body {
            background-image: url("/public/assets/tileable-cubes.svg");
      background-size: 50px;
    }
    main {
      margin: 50px;

    }.title {
      border: 2px solid #000;
      box-shadow: 6px 6px 0px 0px #000;
    }
   
  </style>
</Layout> 