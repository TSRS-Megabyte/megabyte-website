---
import Navbar from "../components/Navbar.astro";
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Megabyte" class="w-screen h-screen">
  <div class="container w-screen h-screen bg-hero-pattern">
    <div class="w-screen text-5xl h-full pt-64">
      <div class="">
        <span class="weare">We are</span>
        <span class="maintext"> Megabyte</span>
        <span class="commune">
          A community of enthus<div class="blue-u understroke">iasts</div>,
          innov<span class="yel-u understroke">ators</span> , and m<span
            class="red-u understroke">akers</span
          >.
        </span>
      </div>
    </div>
    <div class="body">
      <div class="notice"></div>
      <div class="acc"></div>
      <div class="resources"></div>
    </div>
  </div>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@400;700&display=swap");

  .commune {
    margin-top: 5vh;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-family: "Lexend";
    font-style: normal;
    font-weight: 400;
    font-size: 4vmin;
    line-height: 40px;
    /* identical to box height */

    display: flex;
    align-items: center;
    text-align: center;
  }
  .mt-24 {
    margin-top: 20vh;
  }
  .container {
    width: 100vw;
  }
  .weare {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: "Lexend Deca";
    font-style: normal;
    font-weight: 400;
    font-size: 6vmin;
    line-height: 65px;
    /* identical to box height */

    display: flex;
    align-items: center;
    text-align: center;
    letter-spacing: -0.01em;
  }
  .bg-hero-pattern {
    background-image: url("/src/assets/anime-lines.svg");
    background-size: cover;
    min-width: 100vw;
    background-repeat: no-repeat;
    background-position: center;
  }
  .maintext {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: "Lexend Deca";
    font-style: normal;
    font-weight: 700;
    font-size: 14vmin;
    line-height: 150px;
    /* identical to box height */

    display: flex;
    align-items: center;
    text-align: center;
    letter-spacing: 0.05em;

    color: #cceaff;
    text-shadow: -2px 2px 0px #000, 2px 2px 0px #000, 8px 6px 0px #000,
      -2px -2px 0px #000;
  }
  .understroke {
    background-size: 100% 1.8vh;
    background-repeat: no-repeat;
    background-position: right 80%;
    padding-bottom: 1vh;
    margin-top: 1vh;
  }

  .blue-u {
    background-image: linear-gradient(#32a9ff, #32a9ff);
  }
  .yel-u {
    background-image: linear-gradient(#ffe81b, #ffe81b);
  }
  .red-u {
    background-image: linear-gradient(#ff7474, #ff7474);
    background-size: 90% 1.8vh;
  }
</style>
