---
export interface Props {
    title: string;
    link: string;
    body: string;
    date: string;
    imgLink: string;
}
const {title, link, date, body, imgLink} = Astro.props
---
<body class="mw-20 mh-70 text-justify">
    <div class="">  
        <div style="box-shadow: 3px 4px 0px 1px #000;" class="max-w-full rounded overflow-hidden shadow-2xl border-2 border-black">
          <div class="bg-opacity-0 text-center  p-5 ">
            <div class="font-bold text-xl bg-blue-600"><h4 class="">{title}</h4></div><div class="pt-4">
              {date}
            </div>
          </div>
          <div class="bg-white">
          <div class="bg-white w-100 h-70 px-8 py-4">
            <img class="w-full border-2" style="box-shadow: 3px 4px 0px 1px #000;" alt="fbdbfsd" src={imgLink} />
            
          </div>
          <div class="p-5">
           <p class="text-gray-700 text-lg ">
              {body}
            </p>
          </div>
            <div class="bwhite text-right w-full p-3">
  <a class="hover:pointer bg-white text-center linktext font-mono text-lg w-fit px-4 py-2" href={link}>READ MORE</a></div>
        </div>
        </div>
      </div>
</body>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Lexend:wght@400;700&display=swap');
  body {
    font-family: 'Lexend';
  }
  .bg-white {
    background-color: #fff;
  }
  .linktext {
    background: #FFFFFF;
border: 1px solid #000000;
box-shadow: 3px 3px 0px #000000;
font-style: normal;
font-weight: 400;
font-size: 12px;
line-height: 16px;

letter-spacing: 0.05em;
text-transform: uppercase;

  }
  .linktext:hover{
    transform: translate(2.5px, 2.5px);
    box-shadow: 1.5px 1.5px 0px #000000;
    transition-duration: 200ms;
  }
</style>