---
import { HydrationDirectiveProps } from "astro/dist/runtime/server/hydration";
import { marked } from "marked";
import { formatDate } from "../../libs/dateFormat";
export interface Props {
  title: string;
  rawContent: string;
  colour1: string;

  colour2: string;
  logo: string;
  date: string;
}

const { title, rawContent, logo, colour1, colour2, date } = Astro.props;

---

<div class="card flex h-full w-full flex-col rounded-lg">
  <div
    class="bg-var flex bg-blue-500 flex-shrink border-b-2 py-3 leading-5  px-3">
    <div class="logo"> <img src={logo} alt="" class="w-[75px] rounded-[100px] mr-4 border-[#000] border-[2px]"></div>
    <div class="title">
    <h3 class="mb-2 text-xl font-bold">
      {title}
    </h3>
    <h3 class="text-md mb-2 font-bold">
      {formatDate(date)}
    </h3></div>
  </div>
  <div
    class="bg-white flex flex-grow flex-col items-start gap-3 py-5 px-4 md:px-8"
  >
    <div
      class="flex flex-col gap-3 text-left text-lg"
      set:html={rawContent}
    />
  </div>
</div>

<style define:vars={{ colour1, colour2 }}>
  .bg-var {
    background: linear-gradient(90deg, var(--colour1), var(--colour2));
  }
</style>
