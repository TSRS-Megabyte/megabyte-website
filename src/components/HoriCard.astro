---
import { HydrationDirectiveProps } from "astro/dist/runtime/server/hydration";

export interface Props {
  title: string;
  body: string;
  link: string;
  tColour: string;
}
// TODO - Use the tColour as a stype prop for the background of the title and remove the bg-opacity-0 so that the background is visible and remove the class beind the backgrond in the css
// !!Disclaimer it might not be working because the bg is set to 0 somewhere but I CANNOT FIND OUT WHERE
const { title, body, link, tColour } = Astro.props;
---

<div class="card w-full flex flex-col">
  <div class="flex-shrink bg-var bg-blue-500 px-6 py-7 text-xl font-bold border-b-2 leading-5">
    <h3 class="">
      {title}
    </h3>
  </div>
  <div class="flex-grow bg-white px-6 py-5 flex flex-col items-end gap-6">
    <p class="text-justify text-lg">{body}</p>
    <button
      class="bg-white link-button font-bold py-2 text-center font-mono text-xs md:text-sm tracking-wider uppercase"
    >
      <a href={link} class="h-full w-full px-4 uppercase">Read more</a>
    </button>
  </div>
  
</div>

<style define:vars={tColour}>
  @import url("https://fonts.googleapis.com/css2?family=Lexend:wght@400;700&display=swap");
  .bg-var {
    background: var(--tColour);
  }
  .bg-white {
    background: #ffffff;
  }
  .card {
    border: 3px solid black;
    box-shadow: 6px 6px 0px 0px;
    /* transition: ease 0.2s; */
  }

  .card:hover .title {
    background-image: linear-gradient(
      rgba(210, 210, 210, 0.1),
      rgba(210, 210, 210, 20%)
    );
    transition: ease 0.2s;
  }
  .link-button {
    background: #ffffff;
    border: 2px solid black;
    box-shadow: 4px 4px 0px 0px;
  }
  .link-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0px 0px;
    /* transition-duration: 200ms; */
  }

