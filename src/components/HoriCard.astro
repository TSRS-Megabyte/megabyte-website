---
import { HydrationDirectiveProps } from 'astro/dist/runtime/server/hydration';

export interface Props {
  title: string;
  body: string;
  link: string;

}

const { title, body, link } = Astro.props;
---

<div
  class="w-full card h-fit">
  <div class="p-5 bg-opacity-0 py-7 text-xl title font-bold">
    <h3 class="">
      {title}
    </h3>
  </div>
  <div class="body">
  <p class=" text-lg p-6 text-justify">{body}</p></div>
  <div class="bwhite text-right w-full p-3">
  <a class="bg-white text-center linktext font-mono w-fit px-2 py-1" href={link}>More Info</a></div>
</div>


<style>

@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@400;700&display=swap');
.bwhite {
  background: #FFFFFF;
}
.card {

        border: 2px solid #000000;
        box-shadow: 5px 5px 0px #000000;
  }
  .title {
    border-bottom: 2px solid #000000;
    font-family: 'Lexend';
    font-weight: 700;
line-height: 18px;
  }
  .body {
    background: #FFFFFF;
    font-family: 'Lexend';
    font-weight: 400;
  }
  .linktext {
    background: #FFFFFF;
border: 1px solid #000000;
box-shadow: 3px 3px 0px #000000;
font-style: normal;
font-weight: 400;
font-size: 12px;
line-height: 16px;

letter-spacing: 0.05em;
text-transform: uppercase;

  }
  .linktext:hover{
    transform: translate(2.5px, 2.5px);
    box-shadow: 1.5px 1.5px 0px #000000;
    transition-duration: 200ms;
  }
</style>
