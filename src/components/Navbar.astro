---
import navPages from "../../navPages";

const pathname = new URL(Astro.request.url).pathname;
---

<div class="navbar">
  <div id="center-wrapper" class="flex">
    <div class="wrapper">
      <div class="whiteBar">
        <div
          class="inline-flex flex-row left-side-container align-middle hamburgerGroup"
        >
          <a href="/" class="navHome" title="Home">
            <div class="inline-flex align-middle">
              <img
                src="src/assets/tsrs.svg"
                alt="A circle - round and palpable"
              />
              <p class="mgbt-text"><span class="mega">MEGA</span>BYTE</p>
            </div>
          </a>
          <button
            aria-controls="navlinks"
            aria-expanded="false"
            class="nav-toggle"
          >
            <span class="material-symbols-outlined hamburger-menu">menu</span>
          </button>
        </div>
      </div>
      <div class="navlinks-div" data-visible="false">
        <ul class="navlinks hiddenNavlinks">
          {
            Object.entries(navPages).map((page) => (
              <a
                class={pathname == page[1] ? "navlink current" : "navlink"}
                id={page[0].toLowerCase()}
                href={page[1]}
              >
                <li class="font-mono">{page[0].toUpperCase()}</li>
              </a>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</div>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Lexend&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap");

  .navbar {
    position: fixed;
    top: 0;
    z-index: 100;
  }
  .current {
    color: #ff7474;
    opacity: 75%;
  }

  ul {
    list-style: none;
    display: flex;
    padding: 0;
    margin: 0;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
  }

  .navlink {
    text-decoration: none;
    padding: 0 1em;
    font-size: 2vmin;
  }

  .navlink:not(.current) li {
    background-image: linear-gradient(90deg, #ff7474, orange);
    background-size: 0% 0.5vh;
    background-repeat: no-repeat;
    background-position: center 110%;
    transition: 0.2s ease;
  }

  .navlink:not(.current) li:hover {
    background-size: 100% 0.5vh;
  }

  .current {
    cursor: default;
    transition: 0.25s ease;
  }

  .current:hover {
    color: gray;
  }

  .current:active {
    pointer-events: none;
  }
  .font-mono {
    font-family: "Roboto Mono", monospace;
  }
  .wrapper {
    background: rgba(255, 255, 255, 0.9);
    width: 75vw;
    min-height: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;

    border: 2px solid black;
    border-radius: 10px;
    box-shadow: 3px 4px 0px 1px #000;
    transition: 0.25s ease;
  }

  .mgbt-text {
    font-family: "Lexend", sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #000;
    vertical-align: middle;
    align-self: center;
  }
  .mega {
    text-decoration: underline #cceaff 0.3rem;
    text-underline-offset: 0.275rem;
  }

  .navHome > div > p > span {
    transition: 0.2s ease;
  }

  .navHome:hover > div > p > span {
    text-decoration: underline #ff7474 0.3rem;
  }

  img {
    min-width: 70px;
    width: 5vw;
    height: auto;
  }
  .left-side-container {
    padding-left: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
  }
  #center-wrapper {
    width: 100vw;
    justify-content: center;

    position: relative;
    top: 1rem;
  }

  .hamburger-menu {
    display: none;
  }

  @media (max-width: 80em) {
    .wrapper {
      background: rgba(255, 255, 255, 0.75);
      position: fixed;
      border-radius: 0px;
      width: 100vw;
      box-shadow: 0px 0px 0px 0px;
      flex-direction: column;
      justify-content: start;
      transition: 0.25s ease;
    }
    .wrapper:hover {
      background: rgba(255, 255, 255, 0.75);
    }

    .current {
      opacity: 100%;
      color: rgb(59, 72, 255);
    }

    #center-wrapper {
      top: 0rem;
    }
    .whiteBar {
      display: flex;
      width: calc(100vw - 4px);
      background: white;
      justify-content: center;
      box-shadow: 0 0.25rem 1rem #00000075;
    }
    .hamburger-menu {
      display: inline;
    }

    .hamburgerGroup {
      width: 90vw;
      justify-content: space-between;
    }

    .left-side-container {
      padding-left: 0rem;
    }

    .navlink {
      text-shadow: 0em 0.2em 0.2em #0000003d;
    }
    .navlinks-div {
      position: relative;
      width: 100vw;
      height: 0vh;
      vertical-align: middle;
      justify-content: center;
      display: flex;
      visibility: hidden;
      transition: 0.5s ease;
    }
    .navlinks-div[data-visible="true"] {
      height: 60vh;
    }
    .navlinks {
      display: flex;
      flex-direction: column;
      height: 75%;
      align-self: center;
      /* display: none; */
    }

    @supports (backdrop-filter: blur(0.25rem)) {
      .wrapper[blur="true"] {
        backdrop-filter: blur(0.25rem);
      }
    }

    .visible {
      visibility: visible;
      opacity: 1;
      transition: 0.5s ease;
    }

    .hiddenNavlinks {
      opacity: 0;
      transition: 0.25s ease;
    }

    li {
      font-size: 2.5vmax;
    }
  }
</style>

<script defer>
  const nav = document.querySelector(".navlinks-div");
  const navlinks = document.querySelector(".navlinks");
  const navToggle = document.querySelector(".nav-toggle");
  const wrapper = document.querySelector(".wrapper");
  navToggle.addEventListener("click", (e) => {
    e.preventDefault();

    let visible = nav.getAttribute("data-visible");
    visible = visible === "false" ? "true" : "false";
    console.log(visible);
    nav.setAttribute("data-visible", visible);
    wrapper.setAttribute("blur", visible);
    navToggle.setAttribute("aria-expanded", visible);

    if (visible === "true") {
      navlinks.classList.remove("hiddenNavlinks");
      navlinks.classList.add("visible");
    } else {
      navlinks.classList.remove("visible");
      navlinks.classList.add("hiddenNavlinks");
    }
  });
</script>
