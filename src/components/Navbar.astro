---
import navPages from "../../navPages";
import {Icon} from "astro-icon";

const pathname = new URL(Astro.request.url).pathname;
---

<div class="navbar">
  <div id="center-wrapper" class="flex">
    <div class="wrapper">
      <div class="whiteBar">
        <div
          class="inline-flex flex-row left-side-container align-middle hamburgerGroup"
        >
          <a href="/" class="navHome" title="Home">
            <div class="inline-flex align-middle">
              <img
                src="src/assets/tsrs.svg"
                alt="A circle - round and palpable"
              />
              <p class="mgbt-text"><span class="mega">MEGA</span>BYTE</p>
            </div>
          </a>
          <button
            aria-controls="navlinks"
            aria-expanded="false"
            class="nav-toggle"
          >
            <span class="hamburger-menu
            "><svg class="ham ham3" viewBox="0 0 100 100" width="80" onclick="this.classList.toggle('active')">
  <path
        class="line top"
        d="m 70,33 h -40 c -11.092231,0 11.883874,13.496726 -3.420361,12.956839 -0.962502,-2.089471 -2.222071,-3.282996 -4.545687,-3.282996 -2.323616,0 -5.113897,2.622752 -5.113897,7.071068 0,4.448316 2.080609,7.007933 5.555839,7.007933 2.401943,0 2.96769,-1.283974 4.166879,-3.282995 2.209342,0.273823 4.031294,1.642466 5.857227,-0.252538 v -13.005715 16.288404 h 7.653568" />
